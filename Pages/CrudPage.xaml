<Page x:Class="ComputerShop.Pages.CrudPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CrudPage" Height="291" Width="395">
    <Grid Background="#f0f0f0">
        <DataGrid x:Name="userDataGrid" AutoGenerateColumns="False" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Felhasználónév" Binding="{Binding Username}" />
                <DataGridTextColumn Header="Teljes név" Binding="{Binding FullName}" />
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
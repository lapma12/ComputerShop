<Page x:Class="ComputerShop.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegistrationPage">
    <Grid Background="#e5f6ff">
        <Border Width="500" Height="480" Background="White" CornerRadius="10" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="REGISZTRÁCIÓ" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

                <TextBlock Text="Felhasználónév:" Margin="0,15,0,5"/>
                <TextBox x:Name="usernameTextBox" Height="30" />

                <TextBlock Text="Teljes név:" Margin="0,15,0,5"/>
                <TextBox x:Name="fullnameTextBox" Height="30" />

                <TextBlock Text="Email cím:" Margin="0,15,0,5"/>
                <TextBox x:Name="emailTextBox" Height="30" />

                <TextBlock Text="Jelszó:" Margin="0,15,0,5"/>
                <PasswordBox x:Name="passwordBox" Height="30" />

                <Button Content="Regisztrálok" Height="40" Margin="0,30,0,0" Background="#28a745" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

<Page x:Class="ComputerShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:ComputerShop.Pages"
      Title="LoginPage">
    <Grid Background="#f0f0f0">
        <Border Width="400" Height="350" Background="White" CornerRadius="10" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel>
                <TextBlock Text="JELENTKEZZ BE" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>

                <TextBlock Text="Felhasználónév:" Margin="0,20,0,5"/>
                <TextBox x:Name="usernameTextBox" Height="30" />

                <TextBlock Text="Jelszó:" Margin="0,20,0,5"/>
                <PasswordBox x:Name="passwordBox" Height="30"/>

                <Button Content="Bejelentkezés" Height="40" Margin="0,30,0,0" Background="#0078D7" Foreground="White" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
